@model national.Models.Game

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="">
    <div class="bg-secondary  rounded h-auto p-4 - " style="width: 1500px; margin-top:50px">
        <form asp-action="Create" class="d-block gap-x-5">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <h6 class="mb-4 text-start fs-1 fw-bolder">Game Form</h6>
            <div class="form-floating mb-4">
                <input asp-for="Name" class="form-control" id="floatingInput"
                       placeholder="name@example.com">
                <label asp-for="Name">Name</label>
                <span asp-validation-for="Name" class="text-danger text-start"></span>
            </div>
            <div class="form-floating mb-4">
                <input asp-for="Description" class="form-control" id="floatingInput"
                       placeholder="name@example.com">
                <label asp-for="Description">Description</label>
                <span asp-validation-for="Description" class="text-danger text-start"></span>
            </div>
            <div class="form-floating mb-4">
                <input asp-for="GameDate" class="form-control" id="floatingInput"
                       placeholder="name@example.com" type="datetime">
                <label asp-for="GameDate">GameDate</label>
                <span asp-validation-for="GameDate" class="text-danger text-start"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Location" class="form-control" id="floatingInput"
                       placeholder="name@example.com">
                <label asp-for="Location">Location</label>
                <span asp-validation-for="Location" class="text-danger text-start"></span>
            </div>
        
            <div class="form-group mt-4">
                <button type="submit" value="Create" style="width:1435px; margin-bottom:200px;" class="btn btn-primary">Add player</button>

            </div>

        </form>
    </div>
</div>






@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
