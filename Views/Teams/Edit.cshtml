@model national.Models.Team

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>Team</h4>
<hr />

<div class="">
    <div class="bg-secondary  rounded h-auto p-4 - " style="width: 1500px; height:2000px ">
        <form asp-action="Edit" class="d-block">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <h6 class="mb-4">Tea Form</h6>
            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control" id="floatingInput"
                       placeholder="name@example.com">
                <label asp-for="Name">Name</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="City" class="form-control" id="floatingInput"
                       placeholder="name@example.com">
                <label asp-for="City">City</label>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Stadium" class="form-control" id="floatingInput"
                       placeholder="name@example.com">
                <label asp-for="Stadium">Stadium</label>
                <span asp-validation-for="Stadium" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Founded" class="form-control" type="date" id="floatingInput"
                       placeholder="name@example.com">
                <label asp-for="Founded">Founded</label>
                <span asp-validation-for="Founded" class="text-danger"></span>
            </div>
            <button type="submit" value="Save" class="btn btn-primary">Add Team</button>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
