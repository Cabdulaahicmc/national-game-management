@model national.Models.Team

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="">
    <div class="bg-secondary  rounded h-auto p-4 - " style="width: 1500px; margin-top:50px " >
        <form asp-action="Create" class="d-block">
            <h6 class="mb-4 text-start">Tea Form</h6>
            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control" id="floatingInput"
                       placeholder="name@example.com">
                <label asp-for="Name">Name</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="City" class="form-control" id="floatingInput"
                       placeholder="name@example.com">
                <label asp-for="City">City</label>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Stadium" class="form-control" id="floatingInput"
                       placeholder="name@example.com">
                <label asp-for="Stadium">Stadium</label>
                <span asp-validation-for="Stadium" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Founded" class="form-control" type="date" id="floatingInput"
                       placeholder="name@example.com">
                <label asp-for="Founded">Founded</label>
                <span asp-validation-for="Founded" class="text-danger"></span>
            </div>
           <button type="submit" class="btn btn-primary btn-lg" style="width: 1435px;margin-top:15px; margin-bottom:300px">Add Team</button>

        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
