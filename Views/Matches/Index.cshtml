@model IEnumerable<national.Models.Match>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-12">
    <div class="bg-secondary rounded h-100 p-4" style=" width:1500px">
        <h6 class="mb-4">Players Table</h6>
        <div class="table-responsive">
            <table class="table">

                <thead>
                    <tr>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.MatchDate)
                        </th>
                        <th scope="col">@Html.DisplayNameFor(model => model.Location)</th>
                        <th scope="col">  @Html.DisplayNameFor(model => model.DurationMinutes)</th>
                        <th scope="col">  @Html.DisplayNameFor(model => model.TeamA.Name)</th>
                        <th scope="col">  @Html.DisplayNameFor(model => model.TeamB.Name)</th>
                        <th scope="col">  @Html.DisplayNameFor(model => model.Game.Name)</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.MatchDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Location)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DurationMinutes)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TeamA.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TeamB.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Game.Name)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>



                    }
                </tbody>

            </table>
        </div>
    </div>
</div>
